{
  "name": "blue-noise",
  "version": "1.0.0",
  "description": "Blue noise dithering for images",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blue-noise": "./dist/cli.js"
  },
  "scripts": {
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "release": "changeset publish",
    "build": "tsc",
    "start": "tsx src/cli.ts",
    "dither": "tsx src/cli.ts",
    "prepare": "husky",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "blue-noise",
    "dithering",
    "image-processing"
  ],
  "author": "Matthew Blode <m@blode.co>",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "ultracite": "^7.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  }
}
