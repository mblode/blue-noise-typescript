{
  "name": "blue-noise-ts",
  "version": "1.0.0",
  "description": "Blue noise dithering for images",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "blue-noise": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/cli.ts",
    "dither": "tsx src/cli.ts",
    "prepare": "husky",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "blue-noise",
    "dithering",
    "image-processing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^12.1.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "ultracite": "^7.0.5"
  },
  "lint-staged": {
    "*": "biome check --write --no-errors-on-unmatched"
  }
}
